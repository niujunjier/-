/* pages/record/record.wxss */
.record-view{
  width: 100%;
  height: 100%;
  background-color: #fff;
  text-align: center;
  padding-top: 200rpx;
}
.record-ctrl{
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
  background-color: rgb(64, 199, 158);
  border-radius: 50% 50%;
}
.record-ctrl image{
  width: 100%;
  height: 100%;
}
.recording{
  display: none;
}
.recorded{
  display: block;
}
.asw-count{
  width: 50%;
  margin: 40rpx auto;
  color: rgb(64, 199, 158);
  display: flex;
  flex-wrap: wrap;
}
.asw-count-item{
  width: 25%;
}
.record-btn-group{
  width: 55%;
  margin: 20rpx auto;
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 50rpx; 
}
.record-btn{
  width: 120rpx;
  height: 55rpx;
  line-height: 55rpx;
  color: #fff;
  background-color: rgb(64, 199, 158);
  border-radius: 10rpx;
}