<view class='sc-view'>
  <view class='class-tip' wx:if="{{stuList.length==0}}">当前教室暂无学生</view>
  <view class='stu-container'>
    <component-colorful-ball color='{{coMap[item.signed]}}' wx:for="{{stuList}}" detail='{{item}}' bind:myevent='getStuData'></component-colorful-ball>
  </view>
  <view class='btn btn-md btn-success' bindtap='toClassForSt'>签到</view>
</view>
<component-mask-view show-mask='{{sendRedStatu}}' title-opcity='true' show-title='' bind:myevent='showMaskToggle'>
  <image src='../../assets/image/hongbao.png' class='hongbao'></image>
  <view class='red-container'>
    <input class='red-main' value='{{rewardName}}'></input>
  </view>
</component-mask-view>