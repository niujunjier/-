/* pages/leaveMsg/leaveMsg.wxss */
.msg-main{
  width: 100%;
  height: 100%;
  background-color: #fff;
  padding: 1rpx 30rpx 30rpx 30rpx;

}
.date-title{
  font-size: 20rpx;
  text-align: center;
  margin: 58rpx 0 58rpx 0;
}
.msg-bar{
  width: 100%;
  height: 81rpx;
}
.msg-pic{
  height: 81rpx;
  width: 81rpx;
  display: inline-block;
  border-radius: 50%;
  background-color: #ed6d00;
  vertical-align: middle;
}
.msg-textbox{
  display: inline-block;
  vertical-align: middle;
  padding-left: 34rpx;
}
.msg-textbox .font24{
  margin-top: 17rpx;
  width: 500rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}